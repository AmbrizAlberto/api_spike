generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model holamundo {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())
}

model User {
  id         Int       @id @default(autoincrement())
  firstName  String
  lastName   String
  email      String    @unique
  phone      String
  password   String
  role       Role
  city       String    
  number_int String
  cp         String
  img        String?
  img_public_id  String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("users")
  @@index([firstName, lastName])
}

model Veterinary {
  id         Int       @id @default(autoincrement())
  veterinarieName  String
  street   String
  email      String    @unique
  phone      String
  password   String
  role       Role
  city       String  
  locality   String  
  cologne    String
  number_int String
  cp         String
  rfc        String
  category       Categories[] 
  img        String?
  img_public_id  String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("veterinarys")
  @@index([veterinarieName])
}

model Pet {
  id         Int       @id @default(autoincrement())
  id_owner  String
  name String
  gender String
  weight Float
  height String
  animal String
  age Int
  img        String?
  img_public_id  String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("pets")
  @@index([name])
}

enum Role {
  ADMIN
  VETERINARY_OWNER
  PET_OWNER
}

enum Categories {
  NUTRITION
  RECREATION
  CARE
}